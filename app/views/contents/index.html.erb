<p id="notice"><%= notice %></p>

<h1 class="center">Articoli in vendita</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Immagine</th>
      <th>Titolo</th>
      <th>Descrizione</th>
      <th>Venditore</th>
      <th>Prezzo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>

        <td><%= image_tag content.cover.url(:thumb) %></td>
        <td><%= content.titolo %></td>
        <td><%= content.descrizione %></td>
        <td><%= content.user.name%></td>
        <td><%= content.price %></td>
        <td><%= link_to 'Mostra', content %></td>
        <%if content.user == current_user%>
          <td><%= link_to 'Modifica', edit_content_path(content) %></td>
          <td><%= link_to 'Cancella', content, method: :delete, data: { confirm: 'Vuoi cancellare davvero?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo annuncio', new_content_path %>
